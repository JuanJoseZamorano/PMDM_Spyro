<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purpleBotonPress"/>
            <corners android:radius="20dp"/>
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/purpleBotonNormal"/>
            <corners android:radius="20dp"/>
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

</selector>
