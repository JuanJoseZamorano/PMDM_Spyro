<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple2Trans">


    <TextView
        android:id="@+id/bocadilloGuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bocadillo"
        android:text="@string/finguia"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>


    <Button
        android:id="@+id/botonOmitirGuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bocadilloGuia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-216dp"
        android:background="@drawable/boton_omitir"
        android:padding="10dp"
        android:text="@string/cerrarguia"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>